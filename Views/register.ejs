<%- include('layout/userheader'); -%>

<div class="container-fluid form-center">
    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Register User</span></h5>
    <div class="bg-light p-30 mb-5">
       
        <div class="row">
            <form action="/api/auth/register" method="post">
                <div class="col-md-6 form-group">
                    <label>Name</label>
                    <input class="form-control" type="text" name="username" placeholder="John">
                </div>
                <div class="col-md-6 form-group">
                    <label>Email</label>
                    <input class="form-control" type="text" name="email" placeholder="John@gmail.com">
                </div>
                <div class="col-md-6 form-group">
                    <label>Password</label>
                    <input class="form-control" type="password" name="password">
                </div>
                <br>
                <button class="btn btn-danger" type="submit">Register</button>
             </form>

            
        </div>
    </div>
</div>










<%- include('layout/userfooter'); -%>