<%- include('layout/userheader'); -%>
<style>
    .err{
        color: red;
    }
</style>
<div class="container-fluid form-center">
    <h5 class="section-title position-relative text-uppercase mb-3"><span class="bg-secondary pr-3">Register User</span></h5>
    <div class="bg-light p-30 mb-5">
       
        <div class="row">
            <form action="/api/auth/register" method="post" id="register-form">
                <div class="col-md-6 form-group">
                    <label>Name</label>
                    <input class="form-control" type="text" name="username" placeholder="John" maxlength="45">
                    <div class="username err"></div>
                </div>
                <!-- <div class="col-md-6 form-group">
                    <label>Email</label>
                    <input class="form-control" type="text" name="email" placeholder="John@gmail.com" maxlength="55">
                    <div class="email err"></div>
                </div> -->
                <div class="col-md-6 form-group">
                    <label>Password</label>
                    <input class="form-control" type="password" name="password" required  maxlength="25">
                    <div class="password err"></div>
                </div>
                <br>
                <button class="btn btn-danger" type="submit">Register</button>
             </form>

            
        </div>
    </div>
</div>










