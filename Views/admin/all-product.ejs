<%- include('../layout/adminheader'); -%>


<style>
    td img{
        width: 50px;
    }
</style>

   <!-- DATA TABLE-->
 <div class="container">
     <div class="row">
                            
   <div class="col-lg-12">
    <div class="heading">
    <h4 class="">All Products</h4>
     </div>
    <div class="table-responsive table-responsive-data2">
        <table class="table table-data2">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <!-- <th>date</th>
                    <th>status</th> -->
                    <th>price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <% products.forEach (function (p){%>
                <tr class="tr-shadow">
                    <td><img src="/<%= p.productPictures[0] %>" alt="" srcset="">
                    </td>
                    <td>
                        <%= p.title %>
                    </td>
                    <!-- <td>2018-09-27 02:12</td>
                    <td>
                        <span class="status--process">Processed</span>
                    </td> -->
                    <td><%= p.price %></td>
                    <td>
                        <div class="table-data-feature">
                            <a href="/admin/edit-product/<%= p._id %>"><i class="fa-solid fa-pen-to-square"></i></a>
                            <a href="/admin/delete-product/<%= p._id %>"><i class="fa-solid fa-circle-minus"></i></a>
                        </div>
                    </td>
                </tr>
                <% });%>
                
            </tbody>
        </table>
    </div>
</div>

</div>
</div>  

<!-- END DATA TABLE-->








<%- include('../layout/adminfooter'); -%>