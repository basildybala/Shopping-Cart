<%- include('../layout/userheader'); -%>
<style>
   .status{
       color: red;
   }
</style>


<!--  -->
<div class="container-fluid">
    <div class="row">
        
    
<!-- DATA TABLE-->

<div class="col-lg-12">
    <div class="heading">
      <h4 class="">My Orders</h4>
    </div>
    <div class="table-responsive table-responsive-data2">
      <table class="table table-data2">
        <thead>
          <tr>
            <th>Products</th>
            <th>date</th>
            <th>status</th>
            <th>Total Amount</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% ordersList.forEach (function (p){%>
          <tr class="tr-shadow">
            <div class="img">
                
                <td class="">
                    <% p.products.forEach (function (i){%>
                    <img class="img-fluid  my-auto align-self-center mr-2 mr-md-4 pl-0 p-0 m-0" src="/<%= i.proPic[0] %>" width="50" height="50" />
                    <% });%>
                </td>
                
            </div>
            <td><%= p.createdAt %></td>
            <!-----------------------------Order Status Updation--------------------------------------->
            <td>
            

     
        <span class="status " >
          <%= p.status %>
        </span>
        
     
            </td>
            <!-----------------------------Order Status End--------------------------------------->
            <td><%= p.totalAmount %></td>
            <td>
                <a class="btn btn-primary" href="/api/order/order-details/<%= p._id %>">Check Order</a>
              <!-- <div class="table-data-feature">order-details
                <a href="/admin/order-details/<%= p._id %>"><i class="fa-solid fa-pen-to-square"></i></a>
                <a href=""><i class="fa-solid fa-circle-minus"></i></a>
              </div> -->
            </td>
          </tr>
          <% });%>
        </tbody>
      </table>
    </div>
  </div>

  <!-- END DATA TABLE-->
</div>
</div>
<%- include('../layout/userfooter'); -%>